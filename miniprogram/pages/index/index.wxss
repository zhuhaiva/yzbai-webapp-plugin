.pagebox {
  position: relative;
  background-image: linear-gradient(#e4f4ff, #fff);
  height: calc(100% - env(safe-area-inset-bottom));
}
.login-content {
  height: 100%;
}
.login-content .login-header {
  display: flex;
  flex-direction: column;
  height: calc(100% - 400rpx);
  padding-top: 50%;
}
.login-content .login-headerPic {
  margin: 0 auto 20rpx;
}
.login-content .login-name {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}
.login-content .login-extend {
  height: 400rpx;
}
.login-content .login-btn {
  font-weight: 400;
  color: #fff;
  border-color: #5ddd75;
  background-color: #57BE6A;
}
.login-content .login-btn:hover,
.login-content .login-btn:active {
  background-color: #57BE6A;
}
.login-agreement {
  text-align: center;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}
.login-agreement text {
  color: #0052d9;
}
.login-agreement .checkbox {
  height: 28rpx;
  width: 28rpx;
  margin-right: 8rpx;
  border: 2rpx solid #d0d0d0;
  padding: 4rpx;
  border-radius: 4rpx;
}
.login-agreement .checkbox.checked .icon {
  background-color: #1989f1;
  width: 100%;
  height: 100%;
  border-radius: 4rpx;
}
