/* plugin/pages/lightbox-control/detail/detail.wxss */
page {
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
  --td-slider-active-color: #409eff;
  background-color: #d7e4f4;
}
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
  flex-wrap: wrap;
}

.cols {
  width: 100%;
}

.cols.span12 {
  width: calc(50% - 10rpx);
}

.cols.span24 {
  width: 100%;
}

.lightbox {
  width: 100%;
  min-height: 100vh;
  background-color: #d7e4f4;
  border-radius: 10rpx;
  padding: 16rpx;
  user-select: none;
  overflow-y: auto;
  box-sizing: border-box;
  /* 禁止选择 */
}

.lightbox-dialog .el-dialog__body {
  padding: 20rpx 40rpx 40rpx;
}

.lightbox-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.lightbox-flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.lightbox-flex-start {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.grid-item {
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  padding: 32rpx 28rpx;
  margin-bottom: 20rpx;
}

.allowOperat {
  cursor: pointer;
}

.grid-btn {
  width: 84rpx;
  height: 84rpx;
  background-color: rgb(242, 242, 242);
  border-radius: 50%;
  font-size: 36rpx;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: #777;
  overflow: hidden;
}

.grid-btn.active,
.grid-btn:active {
  background-color: #409eff;
  color: #fff;
}

.grid-btn.active image,
.grid-btn:active image {
  filter: brightness(0) saturate(100%) invert(100%);
}

.grid-btn-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
}

.grid-btn-subname {
  margin-top: 4rpx;
  color: #999;
  font-size: 26rpx;
}

.grid-btn-img {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.imgFilter {
  filter: invert(0.4);
}

.temperature {
  display: flex;
  align-items: center;
  margin: 0rpx 80rpx;
}

.temperature-num {
  font-size: 72rpx;
  color: #676767;
}

.temperature-unit {
  font-size: 36rpx;
  margin-top: 20rpx;
  margin-left: 8rpx;
  color: #676767;
}

.el-slider__runway {
  height: 40rpx;
  border-radius: 80rpx;
  margin-bottom: 0;
}

.el-slider__bar {
  height: 40rpx;
  border-radius: 80rpx;
}

.el-slider__button-wrapper {
  top: -16rpx;
  transform: translateX(-78%);
}

.el-scrollbar__wrap {
  overflow-x: hidden;
}

.is-horizontal {
  display: none;
}

.margin-top {
  margin-top: 40rpx;
}

.switch-icon {
  width: 42rpx;
}

.warning-icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 22rpx;
  position: relative;
  top: 4rpx;
}

@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
.animation-6 {
  -webkit-animation: rotation 1s infinite;
  animation: rotation 1s infinite;
}
@keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
